<div class="row">
  <div class="col-sm-12">
    <div class="page-header">
      <h1 class="pull-left">
        <i class="icon-list"></i>
        <span><%= t('officer.plural') %></span>
      </h1>
      <div class="pull-right">
        <ul class="breadcrumb">
          <li>
          <a href="index.html">
            <i class="icon-home"></i>
          </a>
          </li>
          <li class="separator">
          <i class="icon-angle-right"></i>
          </li>
          <li>
          <%= t('general.catalogues') %>
          </li>
          <li class="separator">
          <i class="icon-angle-right"></i>
