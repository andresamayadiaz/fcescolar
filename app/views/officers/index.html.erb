<!-- // TABLE -->
<div class='box bordered-box blue-border' style='margin-bottom:0;'>
  <div class='box-header blue-background'>
    <div class='title'><%= t('officer.plural') %></div>
    <div class='actions'>
      <%= link_to t('officer.new'), new_officer_url, :class=>'btn btn-large btn-success' %>
    </div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='data-table table table-bordered table-striped' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>Title</th>
              <th>Name</th>
              <th>Last Name</th>
              <th>Position</th>
              <th>Depend. lv. 1</th>
              <th>Depend. lv. 2</th>
              <th>Depend. lv. 3</th>
              <th>Depend. lv. 4</th>
              <th>Depend. lv. 5</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @officers.each do |officer| %>
              <tr>
              <td><%= officer.title %></td>
              <td><%= officer.name %></td>
              <td><%= officer.last_name %></td>
              <td><%= officer.position %></td>
              <td><%= officer.dependency_level_1 %></td>
              <td><%= officer.dependency_level_2 %></td>
              <td><%= officer.dependency_level_3 %></td>
              <td><%= officer.dependency_level_4 %></td>
              <td><%= officer.dependency_level_5 %></td>
              <td>
                <div class='text-right'>
                  <%= link_to edit_officer_path(officer), class: 'btn btn-success btn-xs' do %>
                    <i class='icon-edit'></i>
                <% end %>
                  <%= link_to officer, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: t('general.are_you_sure') } do %>
                    <i class='icon-remove'></i>
                <% end %>
                </div>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- .// TABLE -->
