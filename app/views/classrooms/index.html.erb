<!-- // TABLE -->
<div class='box bordered-box blue-border' style='margin-bottom:0;'>
  <div class='box-header blue-background'>
    <div class='title'>Listado de Aula</div>
    <div class='actions'>
      <%= link_to 'Nuevo', new_classroom_path, :class=>'btn btn-large btn-success' %>
    </div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='data-table table table-bordered table-striped' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>Franquicia</th>
              <th>Campus</th> 
              <th>Nombre</th>
              <th>Capacidad Max</th>
              <th>Consecutivo</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @classrooms.each do |classroom| %>
            <tr>
              <td><%= classroom.franchise.try(:name) %></td>
              <td><%= classroom.campus.try(:name) %></td>
              <td><%= classroom.name %></td>
              <td><%= classroom.max_capacity %></td>
              <td><%= classroom.consecutive %></td>
              <td>
               <div class='text-right'>
                 <%= link_to edit_classroom_url(classroom), class: 'btn btn-success btn-xs' do %>
                 <i class='icon-ok'></i>
                 <% end %>
                 <%= link_to classroom, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: 'Are you sure?' } do %>
                 <i class='icon-remove'></i>
                 <% end %>
               </div>
             </td>
            </tr>
            <% end %>
         </tbody>
       </table>
     </div>
   </div>
 </div>
</div>
        <!-- .// TABLE -->