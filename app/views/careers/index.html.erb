<!-- // TABLE -->
<div class='box bordered-box blue-border' style='margin-bottom:0;'>
  <div class='box-header blue-background'>
    <div class='title'><%= t('career.plural') %></div>
    <div class='actions'>
      <%= link_to t('career.new'), new_career_url, :class=>'btn btn-large btn-success' %>
    </div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='data-table table table-bordered table-striped' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th><%= t('study_level.singular') %></th>
              <th><%= t('general.name') %></th> 
              <th>RVOE</th>
              <th>Serie</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @careers.each do |career| %>
            <tr>
              <td><%= career.study_level.try(:name) %></td>
              <td><%= career.name %></td>
              <td><%= career.rvoe %></td>
              <td><%= career.serie %></td>
              <td>
                <div class="text-right">
                  <%= link_to edit_career_url(career), class: 'btn btn-success btn-xs' do %>
                  <i class='icon-ok'></i>
                  <% end %>
                  <%= link_to career, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: t('general.are_you_sure') } do %>
                  <i class='icon-remove'></i>
                  <% end %>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- .// TABLE -->