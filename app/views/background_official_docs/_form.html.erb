<!-- // TABLE -->
<div class="box bordered-box blue-border">
  <div class="box-header blue-background">
    <div class="title">
      <%= t('background_docs.singular') %>
    </div>
  </div>
  <div class="box-content box-double-padding">
    <%= simple_form_for(@background_official_doc,:class=>'form',:style=>'margin-bottom:0;') do |f| %>
    <%= f.error_notification %>
    <fieldset>
      <div class="col-sm-4">
        <div class="box">
          <div class="lead">
            <i class="icon-edit text-contrast"></i>
            Datos Generales
          </div>
          <small class="text-muted">Ingrese los datos generales.</small>
        </div>
      </div>
      <div class="col-sm-7 col-sm-offset-1">
        <div class="form-group">
          <%= f.input :name, :label=> t('general.name'), :class=>'form-control' %>
          <%= f.input :status, :as => :hidden, :input_html => { :value => true } %>
        </div>
      </div>
    </fieldset>
    <hr class="hr-normal">
    <fieldset>
      <div class="col-sm-4">
        <div class="box">
          <div class="lead">
            <i class="icon-edit text-contrast"></i>
            Carta Responsiva
          </div>
          <small class="text-muted">
            Ingrese los dias de vigencia y el texto de la carta responsiva.<br /><br />
            Puedes utilizar los siguientes datos dinámicos:
            <ul>
              <li><span class="badge badge-default">@@persona.id@@</span> - ID de la Persona</li>
              <li><span class="badge badge-default">@@persona.nombre_completo@@</span> - Nombre Completo de la Persona</li>
              <li><span class="badge badge-default">@@persona.xyz@@</span> - Datos XYZ</li>
            </ul>
          </small>
        </div>
      </div>
      <div class="col-sm-7 col-sm-offset-1">
        <div class="form-group">
          <%= f.input :responsive_due_days, :label=>'Días de Vigencia', :class=>'form-control' %>
        </div>
        <div class="form-group">
          <%= f.cktext_area :responsive_letter, :label=>'Carta', :class=>'form-control ckeditor' %>
          </div>
        </div>
      </fieldset>
      <hr class="hr-normal">
      <div class="form-actions">
        <div class="row">
          <div class="col-sm-7 col-sm-offset-5">
            <%= button_tag( :class => "btn btn-primary btn-lg") do %>
            <i class="icon-save"></i>
            <%= t('general.save') %>
            <% end %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
  <!-- .// TABLE -->
