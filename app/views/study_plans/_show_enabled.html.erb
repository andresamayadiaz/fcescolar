<div class='tabbable'>
  <!-- Nav tabs -->
  <% if !@is_pdf %>
  <ul class="nav nav-responsive nav-tabs">
    <li role="presentation" class="active"><a href="#general_info" aria-controls="general_info" role="tab" data-toggle="tab"><%= t('general.general_info') %></a></li>
    <li role="presentation"><a href="#study_plan_periods" aria-controls="study_plan_periods" role="tab" data-toggle="tab"><%= t('study_plan.periods_plan') %></a></li>
    <li role="presentation"><a href="#enabled_info" aria-controls="enabled_info" role="tab" data-toggle="tab"><%= t('study_plan.enabled_info') %></a></li>
  </ul>
  <% end %>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="general_info">
      <fieldset>
        <legend><%= t('study_plan.enabled_info') %></legend>
        <div class="col-sm-8">
          <table class="table table-condensed">
            <tr><td><%= t('career.singular') %></td><td><%= @study_plan.career.try(:name) %></td></tr>          
            <tr><td><%= t('period.num_periods') %></td><td><%= @study_plan.number_of_periods %></td></tr>          
            <tr><td><%= t('period.singular') %></td><td><%= @study_plan.period.try(:name) %></td></tr>          
            <tr><td><%= t('study_plan.attendance_rate') %></td><td><%= @study_plan.attendance_rate %></td></tr>
            <tr><td><%= t('study_plan.extra_oport') %></td><td><%= @study_plan.extra_opportunities %></td></tr>
            <tr><td><%= t('general.name') %></td><td><%= @study_plan.name %></td></tr>
          </table>
        </div>
      </fieldset>
    </div>
    <div role="tabpanel" class="tab-pane" id="study_plan_periods">
      <fieldset>
        <legend><%= t('study_plan.periods_plan') %></legend>
        <div class="col-sm-8">
          <% @study_plan.study_plan_periods.each do |study_plan_period| %>
            <h5><%= t('period.name') %>:&nbsp;<%= study_plan_period.period_name %></h5>
          <table class="table table-condensed">
            <thead>
              <tr>
                <th><%= t('curricular_line.singular') %></th>
                <th><%= t('subject.singular') %></th>
                <th><%= t('study_plan.week_frec') %></th>
                <th><%= t('study_plan.credits') %></th>
              </tr>
            </thead>
            <tbody>
              <% study_plan_period.study_plan_subjects.each do |study_plan_subject| %>
                <tr>
                <td><%= study_plan_subject.curricular_line.try(:name) %></td>
                <td><%= study_plan_subject.subject.try(:name) %></td>         
                <td><%= study_plan_subject.weekly_frequency %></td>          
                <td><%= study_plan_subject.credits %></td>
              </tr>          
            <% end %>
            </tbody>  
          </table>

          <hr class='normal'>
        <% end %>
        </div>
      </fieldset>
    </div>
    <div role="tabpanel" class="tab-pane" id="enabled_info">
      <fieldset>
        <legend><%= t('study_plan.enabled_info') %></legend>
          <h5><%= t('campus.plural') %>:&nbsp;<%= @schedule.campus.try(:name) %></h5>
          <div class="form-group">
            <label class="col-md-12 control-label"><%= t('background_docs.plural_req') %></label>
            <div class="col-md-12">
              <ul>
                <% @schedule.background_official_docs.each do |doc| %>
                  <li><%= doc.name %></li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-12 control-label"><%= t('classroom.active') %></label>
            <div class="col-md-12">
              <ul>
                <% @schedule.classrooms.each do |classroom| %>
                  <li><%= classroom.name %></li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-12 control-label"><%= t('time_slot.ts_active') %></label>
            <div class="col-md-12">
              <ul>
                <% @schedule.time_slots.each do |timeslot| %>
                  <li><%= timeslot.name %></li>
                <% end %>
              </ul>
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-12 control-label"><%= t('degree_achivements.plural') %></label>
            <div class="col-md-12">
              <ul>
                <% @schedule.degree_achievements_categories.each do |degree| %>
                  <li><%= degree.name %></li>
                <% end %>
              </ul>
            </div>
          </div>
          <hr class='normal'>
      </fieldset>
    </div>
  </div>
