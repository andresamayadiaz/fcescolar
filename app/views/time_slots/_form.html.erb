<!-- // TABLE -->
<div class="box bordered-box blue-border">
  <div class="box-header blue-background">
    <div class="title">
      <%= t('time_slot.singular') %>
    </div>
  </div>
  <div class="box-content box-double-padding">
    <%= simple_form_for(@time_slot,:class=>'form',:style=>'margin-bottom:0;') do |f| %>
    <%= f.error_notification %>
    <%= f.input :status, :as=>:hidden, :input_html=>{:value=>true} %>
    <fieldset>
      <div class="col-sm-4">
        <div class="box">
          <div class="lead">
            <i class="icon-edit text-contrast"></i>
            <%= t('general.general_data') %>
          </div>
          <small class="text-muted"><%= t('general.insert_general_info') %></small>
        </div>
      </div>
      <div class="col-sm-7 col-sm-offset-1">
        <div class="form-group">
          <% if current_user.active_role=='super_administrator' %>
            <%= f.association :franchise, as: :hidden, input_html: {value: session[:active_franchise]} %>
          <% else %>
            <%= f.association :franchise, as: :hidden, input_html:{value: current_user.person.franchise_id} %>
          <% end %>
        </div>
        <div class="form-group">
          <%= f.association :campus, :label=>t('campus.singular'), :class=>'select2 form-control' %>
        </div>
        <div class="form-group">
          <%= f.label t('time_slot.hora_ini') %>
        </div>
        <div class="form-group">
          <%= time_select("time_slot", "start_time",:default => {:hour => '00', :minute => '00'})%>
        </div>
        <div class="form-group">
           <%= f.label t('time_slot.hora_fin')%>
        </div>
        <div class="form-group">
          <%= time_select("time_slot", "end_time",:default => {:hour => '00', :minute => '00'})%>
        </div>
        <div class="form-group">
          <%= f.label t('general.tot_minutes') %>
          <input class="string form-control" id="sumaminutos" name="sumaminutos" type="text" style="width:100px" disabled>
        </div>
      </div>
    </fieldset>
    <hr class="hr-normal">
    <div class="form-actions">
      <div class="row">
        <div class="col-sm-7 col-sm-offset-5">
          <%= button_tag( :class => "btn btn-primary btn-lg") do %>
          <i class="icon-save"></i>
          <%= t('general.save') %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<!-- .// TABLE -->
<% content_for :specific_js do %>
<script type="text/javascript">

  function calculate_minutes(){
    hora_ini=$('#time_slot_start_time_4i').val();
    min_ini=$('#time_slot_start_time_5i').val();
    hora_fin=$('#time_slot_end_time_4i').val();
    min_fin=$('#time_slot_end_time_5i').val();

    var start_time= hora_ini+':'+min_ini;
    var end_time=hora_fin+':'+min_fin;
         
    var timeStart = new Date("01/01/2007 " + start_time);
    var timeEnd = new Date("01/01/2007 " + end_time);
    var difference = timeEnd - timeStart;             

    minutes = difference / 1000 / 60;

    $('#sumaminutos').val(minutes);
  }

  function get_by_franchise_id(val){
    $.ajax({
      type: 'GET',
      url: '/campuses/get_by_franchise_id?franchise_id='+val,
      success: function(data){
        if(data){
          var html_element='<option value=""></option>';
          $.each(data,function(index,value){
            html_element+="<option value="+value.id+">"+value.name+"</option>"
          })
          var current_campus_id = $('#time_slot_campus_id').val();
          $("#time_slot_campus_id").html(html_element);
          if (current_campus_id) {
              $('#time_slot_campus_id').val(current_campus_id);
          }
        }
      }
    })
  }

  $(document).ready(function(){

    get_by_franchise_id($('#time_slot_franchise_id').val());
    calculate_minutes();

    $("#time_slot_start_time_5i, #time_slot_end_time_5i, #time_slot_start_time_4i, #time_slot_end_time_4i").change(function() {
        calculate_minutes();
    });
  
  })
</script>
<% end %>
