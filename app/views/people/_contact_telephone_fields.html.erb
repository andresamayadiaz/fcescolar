<div class='row nested-fields form-group'>
  <label class="col-md-2 control-label"><%= t('general.telefonos')%></label>
  <div class="col-md-5">
    <%= f.input :phone_number, :label=>false, :input_html=>{class: 'input-sm'} %>
  </div>
  <label class="col-md-1 control-label"><%= t('general.tipo')%></label>
  <div class="col-md-3">
    <%= f.input :phone_type, :label=>false, :input_html=>{class: 'input_sm'} %>
  </div>
  <div class="col-md-1">
    <%= link_to_remove_association "x", f, class: 'btn btn-sm btn-danger' %>
  </div>
</div>
