<div class="modal fade" id="searchModal">
	<div class="modal-dialog" style="width:70%;">
		<div class="modal-content">
			<div class="modal-body">
				<%= form_tag(search_people_url, :method => "post", id: "search-person-form") do %>
					<div class="form-group">
						<label for="fathers_maiden_name">Father's Maiden Name:</label>
						<%= text_field_tag :fathers_maiden_name, nil, :class=>'form-control' %>
					</div>
					<div class="form-group">
						<label for="mothers_maiden_name">Mother's Maiden Name:</label>
						<%= text_field_tag :mothers_maiden_name, nil, :class=>'form-control' %>
					</div>
					<div class="form-group">
						<label for="name">Name(s):</label>
						<%= text_field_tag :name, nil, :class=>'form-control' %>
					</div>
					<% if current_user.active_role=='super_administrator' or current_user.active_role=='franchise_director' %>
					<div class="form-group">
						<label for="campus">Campus:</label>
						<%= select_tag "campus", options_from_collection_for_select(@all_campus, "name", "name"), {include_blank: true, :class=>'form-control'} %>
					</div>
					<% end %>
					<button type="submit" class="btn btn-default">Search</button>
				<% end %>
				<br/>
				<table id="search_person_result" class="table table-striped" style="display:none;">
					<thead>
						<tr>
							<th>Father's Maiden Name</th>
							<th>Mother's Maiden Name</th>
							<th>Name(s)</th>
						</tr>
					</thead>
					<tbody>
						
					</tbody>
				</table>
			</div>

		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->