<div class="modal fade" id="searchModal">
	<div class="modal-dialog" style="width:70%;">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title"><%= t('general.search') %> <%= t('people.singular') %></h4>
			</div>
			<div class="modal-body">
				<%= form_tag(search_people_url, :method => "post", id: "search-person-form") do %>
					<div class="form-group">
					    <label for="fathers_maiden_name" class="col-xs-3 control-label"><%= t('general.fathers_maiden') %>:</label>
					    <div class="col-xs-9">
					        <div class="form-inline">
					            <div class="form-group">
					                <%= text_field_tag :fathers_maiden_name, nil, :class=>'form-control' %>
					            </div>
					        </div>
					    </div>
					</div>
					<br/>
					<div class="form-group">
						<label for="mothers_maiden_name" class="col-xs-3 control-label"><%= t('general.mathers_maiden') %>:</label>
						<div class="col-xs-9">
					        <div class="form-inline">
					            <div class="form-group">
					                <%= text_field_tag :mothers_maiden_name, nil, :class=>'form-control' %>
					            </div>
					        </div>
					    </div>
					</div>
					<br/>
					<div class="form-group">
						<label for="name" class="col-xs-3 control-label"><%= t('general.name') %>(s):</label>
						<div class="col-xs-9">
					        <div class="form-inline">
					            <div class="form-group">
					                <%= text_field_tag :name, nil, :class=>'form-control' %>
					            </div>
					        </div>
					    </div>
					</div>
					<% if current_user.active_role=='super_administrator' or current_user.active_role=='franchise_director' %>
					<br/>
					<div class="form-group">
						<label for="campus" class="col-xs-3 control-label"><%= t('campus.singular') %>:</label>
						<div class="col-xs-9">
					        <div class="form-inline">
					            <div class="form-group">
					                <%= select_tag "campus", options_from_collection_for_select(@all_campus, "id", "name"), {include_blank: true, :class=>'form-control'} %>
					            </div>
					        </div>
					    </div>
					</div>
					<% end %>
					<button type="submit" class="btn btn-default"><%= t('general.search') %></button>
				<% end %>
				<br/>
				<h4>Resultados de la Busqueda</h4>
				<table id="search_person_result" class="table table-striped" style="display:none;">
					<thead>
						<tr>
							<th><%= t('general.fathers_maiden') %></th>
							<th><%= t('general.mathers_maiden') %></th>
							<th><%= t('general.name') %>(s)</th>
						</tr>
					</thead>
					<tbody>
						
					</tbody>
				</table>
			</div>

		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
