<%= simple_form_for(@profile,:class=>'form',:style=>'margin-bottom:0;' ) do |f| %>
<%= f.error_notification %>
<fieldset>
  <div class="col-sm-4">
    <div class="box">
      <div class="lead">
        <i class="icon-edit text-contrast"></i>
        <%= t('general.general_info') %>
      </div>
      <small class="text-muted"><%= t('general.insert_general_info') %></small>
    </div>
  </div>
  <div class="col-sm-7 col-sm-offset-1">
    <%= f.simple_fields_for :person_living_address do |p| %>
        <%= p.input :street, :label=> t('general.street') %>
        <%= p.input :num_ext, :label=> t('general.num_ext') %>
        <%= p.input :num_int, :label=> t('general.num_int') %>
        <%= p.input :colonia, :label=> t('general.colonia') %>
        <%= p.input :cp, :label=> t('general.cp') %>
        <%= p.input :municipio, :label=> t('general.municipio') %>
        <%= p.association :country, :label=> t('general.country') %>
        <%= p.association :state, :label=> t('general.state') %>
        <%= p.input :phone_emergency, :label=> t('general.phone_emergency') %>
    <% end %>
  </div>
</fieldset>
<hr class="hr-normal">
<fieldset>
  <div class="col-sm-4">
    <div class="box">
      <div class="lead">
        <i class="icon-edit text-contrast"></i>
        <%= t('general.add')%> <%= t('general.telefonos')%>
      </div>
      <small class="text-muted"><%= t('profile.new_phone')%></small>
    </div>
  </div>
  <div class="col-sm-7 col-sm-offset-1">
    <%= f.simple_fields_for :contact_telephones do |contact_telephone| %>
    <%= render 'contact_telephone_fields', :f => contact_telephone %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association t('general.add'), f, :contact_telephones, :class=>'btn btn-info btn-xs' %>
    </div>
  </div>
</fieldset>
<hr class="hr-normal">
<fieldset>
  <div class="col-sm-4">
    <div class="box">
      <div class="lead">
        <i class="icon-edit text-contrast"></i>
        <%= t('general.add')%> <%= t('general.emails')%>
      </div>
      <small class="text-muted"><%= t('general.add_email_contact')%></small>
    </div>
  </div>
  <div class="col-sm-7 col-sm-offset-1">
    <%= f.simple_fields_for :person_emails do |person_email| %>
    <%= render 'person_email_fields', :f => person_email %>
    <% end %>
    <div class='links'>
      <%= link_to_add_association t('general.add'), f, :person_emails, :class=>'btn btn-info btn-xs' %>
    </div>
  </div>
</fieldset>
<hr class="hr-normal">
<div class="form-actions">
  <div class="row">
    <div class="col-sm-7 col-sm-offset-5">
      <%= button_tag( :class => "btn btn-primary btn-lg") do %>
      <i class="icon-save"></i>
      <%= t('general.save') %>
      <% end %>
    </div>
  </div>
</div>
<% end %>
