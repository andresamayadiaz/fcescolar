<div class="form-group nested-fields">
  <label class="col-md-1 control-label">Name</label>
  <div class="col-md-2">
    <%= f.input :full_name, :label=>false , input_html: {class: 'input-sm'}%>        
  </div>
  <label class="col-md-2 control-label">Relationship</label>
  <div class="col-md-2">
    <%= f.input :relation_name, :label=>false, input_html: {class: 'input-sm'} %>
  </div>
  <div class="col-md-2">
    <%= link_to_remove_association "x", f, class: 'btn btn-sm btn-danger' %>        
  </div>
</div>
