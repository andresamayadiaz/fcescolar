              <td><%= s.name %></td>
              <td>
                <div class='text-right'>
                  <%= link_to 'View', subject_path(s), class: 'btn btn-info btn-xs' %>
                </div>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<!-- .// TABLE -->
