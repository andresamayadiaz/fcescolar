<% if current_user.active_role.blank? %>
<div class="alert alert-info" role="alert">Bienvenido, por favor seleccione el papel que desea utilizar</div>
<%= simple_form_for(current_user, :url =>set_active_role_users_path,:class=>'form',:style=>'margin-bottom:0;' ) do |f| %>
<fieldset>
	<div class="col-sm-7">
		<%= f.input :active_role, collection: current_user.roles.map { |r| [r.name.humanize, r.name] }, prompt: "Select your assigned role(s)", label:'Select Role(s)' %>
		<div class="form-actions">
			<%= button_tag( :class => "btn btn-primary btn-lg") do %>
			<i class="icon-save"></i>Select Role
			<% end %>
		</div>
	</div>
</fieldset>
<% end %>
<% else %>
<div class="alert alert-info" role="alert">Conectado como: <%= current_user.active_role.humanize %></div>
<% if @notifications %>
<div class='box bordered-box blue-border' style='margin-bottom:0;'>
	<div class='box-header blue-background'>
		<div class='title'>Listado de Notificaciones</div>
	</div>
	<div class='box-content box-no-padding'>
		<div class='responsive-table'>
			<div class='scrollable-area'>
				<table class='data-table table table-bordered table-striped' style='margin-bottom:0;'>
					<thead>
						<tr>
							<th>Desde</th>
							<th>Mensaje</th>
						</tr>
					</thead>
					<tbody>
						<% @notifications.each do |n| %>
						<tr>
							<td><%= n.user.try(:name) %></td>
							<td><%= n.message %></td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>
<% end %>
<% end %>