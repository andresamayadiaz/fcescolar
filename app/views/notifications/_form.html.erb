<!-- // TITULO -->
<div class="row">
  <div class="col-sm-12">
    <div class="page-header">
      <h1 class="pull-left">
        <i class="icon-edit"></i>
        <span><%= t('notification.singular') %></span>
      </h1>
      <div class="pull-right">
        <ul class="breadcrumb">
          <li>
            <a href="index.html">
              <i class="icon-home"></i>
            </a>
          </li>
          <li class="separator">
            <i class="icon-angle-right"></i>
          </li>
          <li>
            <%= t('general.catalogues') %>
          </li>
          <li class="separator">
            <i class="icon-angle-right"></i>
          </li>
          <li class="active"><%= t('notification.plural') %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- .// TITULO -->

<!-- // TABLE -->
<div class="box bordered-box blue-border">
  <div class="box-header blue-background">
    <div class="title">
      <%= t('notification.plural') %>
    </div>
  </div>
  <div class="box-content box-double-padding">
    <%= simple_form_for(@notification, :class=>'form', :style=>'margin-bottom:0;') do |f| %>
    <%= f.error_notification %>
    <fieldset>
      <div class="col-sm-4">
        <div class="box">
          <div class="lead">
            <i class="icon-edit text-contrast"></i>
            Datos Generales
          </div>
          <small class="text-muted">Ingrese los datos generales.</small>
        </div>
      </div>
      <div class="col-sm-7 col-sm-offset-1">
      	  <% if current_user.active_role=='super_administrator' %>
          	<%= f.association :franchise, :label=>t('franchise.singular'), :class=>'form-control' %>
          <% else %>
          	<%= f.input :franchise_id, :as => :hidden, :input_html => { :value => current_user.franchise.id } %>
          <% end %>
          <%= f.input :title, :label=>'Titulo', :class=>'form-control' %>
          <%= f.input :message, :label=>'Mensaje', :class=>'form-control' %>
          <%= f.input :role_id, collection: Role.all.map { |r| [r.name.humanize, r.id] }, label:'Papel destino', class: 'form-control' %>
      </div>
    </fieldset>
    <hr class="hr-normal">
    <div class="form-actions">
      <div class="row">
        <div class="col-sm-7 col-sm-offset-5">
          <%= button_tag( :class => "btn btn-primary btn-lg") do %>
          <i class="icon-save"></i>
          <%= t('general.save') %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<!-- .// TABLE -->
