<!-- // TABLE -->
<div class='box bordered-box blue-border' style='margin-bottom:0;'>
  <div class='box-header blue-background'>
  <div class='title'>Nombre: <%= @period.name %></div>
    <div class='actions'>
      <%= link_to 'Espalda', periods_path, :class=>'btn btn-large btn-success' %>
    </div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='table table-bordered table-striped' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>Name</th>
              <th>Initial Month</th>
              <th>End Month</th>
              <th>Year</th>
            </tr>
          </thead>
          <tbody>
            <% @period.period_details.each do |p| %>
            <tr>
              <td><%= p.period.name %></td>
              <td><%= p.initial_month.strftime('%B') %></td>
              <td><%= p.end_month.strftime('%B') %></td>
              <td><%= p.end_month.strftime('%Y') %></td>
            </tr>
            <% end %>
            <tr>
              <td><%= @period.name %></td>
              <td>
                <%= select_month(@additional_year, {use_month_names: %w(January February March April May June July August Saptember October November December)}, {:class=>'form-control'}) %>
              </td>
              <td></td>
              <td>
                <%= select_year(@additional_year, {start_year: @additional_year.year, end_year: (@additional_year+10.years).year}, {:class=>'form-control'})%>
              </td>
            </tr>
          </tbody>
        </table>
      </table>
    </div>
  </div>
</div>
</div>
<!-- .// TABLE -->