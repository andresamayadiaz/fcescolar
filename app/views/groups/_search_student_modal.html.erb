<div class="modal fade" id="searchStudentModal">
	<div class="modal-dialog" style="width:70%;">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4>Search Student</h4>
      </div>
			<div class="modal-body">
				<%= form_tag(search_student_groups_url, :method => "post", id: "search-student-form") do %>
					<div class="form-group row">
					    <label for="id" class="col-xs-3 control-label">ID</label>
					    <div class="col-xs-9">
					        <div class="form-inline">
					            <div class="form-group">
					                <%= text_field_tag :id, nil, :class=>'form-control' %>
					            </div>
					        </div>
					    </div>
					</div>
          <div class="form-group row">
						<label for="name" class="col-xs-3 control-label">Name(s)</label>
						<div class="col-xs-9">
					        <div class="form-inline">
					            <div class="form-group">
					                <%= text_field_tag :name, nil, :class=>'form-control' %>
					            </div>
					        </div>
					    </div>
					</div>
					<div class="form-group row">
						<label for="fathers_maiden_name" class="col-xs-3 control-label">First Lastname</label>
						<div class="col-xs-9">
					        <div class="form-inline">
					            <div class="form-group">
					                <%= text_field_tag :fathers_maiden_name, nil, :class=>'form-control' %>
					            </div>
					        </div>
					    </div>
					</div>
					<div class="form-group row">
						<label for="mothers_maiden_name" class="col-xs-3 control-label">Second Lastname</label>
						<div class="col-xs-9">
					        <div class="form-inline">
					            <div class="form-group">
					                <%= text_field_tag :mothers_maiden_name, nil, :class=>'form-control' %>
					            </div>
					        </div>
					    </div>
					</div>
					<button type="submit" class="btn btn-default"><%= t('general.search') %></button>
				<% end %>
				<br/>
				<h4>Resultados de la Busqueda</h4>
				<table id="search_person_result" class="table table-striped" style="display:none;">
					<thead>
            <tr>
              <th>ID</th>
							<th>First Lastname</th>
							<th>Second Lastname</th>
							<th>Name(s)</th>
						</tr>
					</thead>
					<tbody>
						
					</tbody>
				</table>
			</div>

		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
