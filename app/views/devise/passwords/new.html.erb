<div class='middle-container'>
  <div class='middle-row'>
    <div class='middle-wrapper'>
      <div class='login-container-header'>
        <div class='container'>
          <div class='row'>
            <div class='col-sm-12'>
              <%= render 'layouts/messages' %>
              <div class='text-center'>
                <%= image_tag("flatty/flogo_lg.png", height: '93', width: '80') %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class='login-container'>
        <div class='container'>
          <div class='row'>
            <div class='col-sm-4 col-sm-offset-4'>
              <h1 class='text-center title'>Reset Password</h1>
              <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :role => 'form'}) do |f| %>
                <%= devise_error_messages! %>
              <div class='form-group'>
                <div class='controls with-icon-over-input'>
                  <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
                  <i class='icon-user text-muted'></i>
                </div>
              </div>
              <button class='btn btn-block'>Entrar</button>
            <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
