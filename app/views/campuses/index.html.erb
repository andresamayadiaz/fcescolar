<!-- // TABLE -->
<div class='box bordered-box blue-border' style='margin-bottom:0;'>
  <div class='box-header blue-background'>
    <div class='title'><%= t('campus.plural') %></div>
    <div class='actions'>
      <%= link_to t('campus.new'), new_campus_url, :class=>'btn btn-large btn-success' %>
    </div>
  </div>
  <div class='box-content box-no-padding'>
    <div class='responsive-table'>
      <div class='scrollable-area'>
        <table class='data-table table table-bordered table-striped' style='margin-bottom:0;'>
          <thead>
            <tr>
              <th>
                <%= t('franchise.singular') %>
              </th>
              <th>
                <%= t('general.name') %>
              </th> 
              <th>
                <%= t('classroom.plural') %>
              </th>
              <th>
                <%= t('general.address') %>
              </th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% @campuses.each do |campus| %>
            <tr>
            <td><%= campus.franchise.name %></td>
             <td><%= campus.name %></td>
             <td><%= campus.number_of_classrooms %></td>
             <td><%= campus.address %></td>
             <td>
               <div class='text-right'>
                 <%= link_to edit_campus_url(campus), class: 'btn btn-success btn-xs' do %>
                 <i class='icon-edit'></i>
                 <% end %>
                 <%= link_to campus, class: 'btn btn-danger btn-xs', method: :delete, data: { confirm: t('general.are_you_sure')} do %>
                 <i class='icon-remove'></i>
                 <% end %>
               </div>
             </td>
           </tr>
           <% end %>
         </tbody>
       </table>
     </div>
   </div>
 </div>
</div>
        <!-- .// TABLE -->
