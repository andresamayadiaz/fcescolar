<!-- // TABLE -->
<div class="box bordered-box blue-border">
  <div class="box-header blue-background">
    <div class="title">
      Campus
    </div>
  </div>
  <div class="box-content box-double-padding">
    <%= simple_form_for(@campus,:class=>'form',:style=>'margin-bottom:0;') do |f| %>
    <%= f.error_notification %>
    <fieldset>
      <div class="col-sm-4">
        <div class="box">
          <div class="lead">
            <i class="icon-edit text-contrast"></i>
            Datos Generales
          </div>
          <small class="text-muted">Ingrese los datos generales. El campo aulas debe ser número haciendo referencia a la cantidad de aulas disponibles para grupos en el Campus.</small>
        </div>
      </div>
      <div class="col-sm-7 col-sm-offset-1">
        <div class="form-group">
          <%= f.association :franchise, :label=>'Franquicia',:class=>'selec2 form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :name, :label=>'Nombre',:class=>'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :address, :label=>'Dirección', :class=>'form-control' %>
        </div>
        <div class="form-group">
          <%= f.input :classrooms, :label=>'Aulas', :class=>'form-control' %>
        </div>
      </div>
    </fieldset>
    <hr class="hr-normal">
    <div class="form-actions">
      <div class="row">
        <div class="col-sm-7 col-sm-offset-5">
          <%= button_tag( :class => "btn btn-primary btn-lg") do %>
          <i class="icon-save"></i>
          Guardar
          <% end %>
        </div>
      </div>
    </div>

    <% end %>
  </div>
</div>
<!-- .// TABLE -->

